<% content_for :title, "Quotes - Hapax" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Header Section -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        Quotes
      </h1>
      <p class="text-lg text-gray-600">
        Explore literary quotations referenced in classical works
      </p>
    </div>

    <!-- Pagination Info and Actions -->
    <div class="flex items-center justify-between mb-6">
      <% if @pagy&.count && @pagy.count > 0 %>
        <p class="text-sm text-gray-600">
          Showing <%= @pagy.from %>-<%= @pagy.to %> of <%= @pagy.count %> quotes
        </p>
      <% else %>
        <div></div>
      <% end %>

      <%= link_to new_quote_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        Add Quote
      <% end %>
    </div>

    <!-- Quotes List -->
    <% if @quotes.any? %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div id="quotes" class="divide-y divide-gray-100">
          <% @quotes.each do |quote| %>
            <%= render quote %>
          <% end %>
        </div>
      </div>

      <!-- Pagination Controls -->
      <% if @pagy&.pages && @pagy.pages > 1 %>
        <div class="mt-8 flex justify-center">
          <nav class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
            <%== pagy_nav(@pagy) %>
          </nav>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="text-center py-16 px-8">
          <div class="w-16 h-16 mx-auto mb-6 bg-gray-100 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">No quotes yet</h3>
          <p class="text-gray-600 mb-6">Start building your collection of literary quotes</p>
          <%= link_to new_quote_path,
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add First Quote
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
