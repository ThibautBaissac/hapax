<% content_for :title, "Editing #{@quote.title} - Hapax" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Navigation -->
    <div class="mb-8">
      <% back_path = @movement ? [@composer, @work, @movement, @quote] : [@composer, @work, @quote] %>
      <%= link_to back_path, class: "inline-flex items-center text-indigo-600 hover:text-indigo-700 font-medium transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <%= truncate(@quote.title, length: 50) %>
      <% end %>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl text-gray-900 mb-2">
        Update
        <span class="font-bold">"<%= truncate(@quote.title, length: 60) %>"</span>
      </h1>
    </div>

    <!-- Form -->
    <%= render "form", quote: @quote %>
  </div>
</div>
