<% content_for :title, @quote.title %>

<div class="min-h-screen bg-slate-50">
  <div class="container mx-auto px-4 py-8">
    <!-- Top Navigation Bar -->
    <div class="mb-6 flex justify-between items-center">
      <%= link_to quotes_path, class: "inline-flex items-center text-emerald-600 hover:text-emerald-800 font-medium transition-colors duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Quotes
      <% end %>

      <!-- Action Buttons -->
      <div class="flex gap-2">
        <%= link_to edit_quote_path(@quote),
            class: "inline-flex items-center justify-center w-10 h-10 bg-white text-emerald-700 rounded-lg shadow-md hover:shadow-lg hover:bg-gray-50 transform hover:-translate-y-0.5 transition-all duration-200",
            title: "Edit Quote" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        <% end %>

        <%= button_to @quote, method: :delete,
            data: { confirm: "Are you sure you want to delete this quote? This action cannot be undone." },
            class: "inline-flex items-center justify-center w-10 h-10 bg-red-600 hover:bg-red-700 text-white rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200",
            title: "Delete Quote" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        <% end %>
      </div>
    </div>

    <!-- Main Content Card -->
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <!-- Header Section -->
      <div class="bg-emerald-500 px-8 py-12 text-white">
        <div class="flex-1">
          <h1 class="text-3xl lg:text-4xl font-bold mb-4 leading-tight">
            <%= @quote.title %>
          </h1>

          <!-- Author Info -->
          <div class="flex items-center text-emerald-100 text-lg mb-6">
            <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
            </svg>
            <span class="font-medium">by <%= @quote.author %></span>
          </div>
        </div>
      </div>

      <!-- Content Section -->
      <div class="p-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Left Column - Content -->
          <div class="lg:col-span-2 space-y-8">
            <!-- Notes -->
            <% if @quote.notes.present? %>
              <div>
                <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
                  <svg class="w-6 h-6 mr-3 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  Notes & Content
                </h2>
                <div class="bg-emerald-50 rounded-xl p-6 border-l-4 border-emerald-500">
                  <div class="prose prose-lg max-w-none">
                    <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                      <%= @quote.notes %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Movement Quotes Section -->
            <% if @quote.respond_to?(:movement_quotes) && @quote.movement_quotes.any? %>
              <div>
                <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                  <svg class="w-6 h-6 mr-3 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                  </svg>
                  Referenced in Works
                  <span class="ml-2 text-sm font-normal text-gray-500">(<%= @quote.movement_quotes.count %>)</span>
                </h2>
                <div class="space-y-4">
                  <% @quote.movement_quotes.includes(movement: :work).each do |movement_quote| %>
                    <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-200">
                      <div class="flex justify-between items-start">
                        <div class="flex-1">
                          <h3 class="font-semibold text-gray-900">
                            <%= movement_quote.movement.work.title %> - <%= movement_quote.movement.title %>
                          </h3>
                          <% if movement_quote.category.present? %>
                            <span class="inline-block mt-2 px-2 py-1 bg-emerald-100 text-emerald-800 text-xs rounded-full">
                              <%= movement_quote.category %>
                            </span>
                          <% end %>
                          <% if movement_quote.location_in_score.present? %>
                            <p class="text-sm text-gray-600 mt-1">
                              <strong>Location:</strong> <%= movement_quote.location_in_score %>
                            </p>
                          <% end %>
                          <% if movement_quote.excerpt_text.present? %>
                            <p class="text-sm text-gray-600 mt-1">
                              <strong>Excerpt:</strong> "<%= movement_quote.excerpt_text %>"
                            </p>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Right Column - Details -->
          <div class="space-y-6">
            <!-- Quote Details -->
            <div class="bg-gray-50 rounded-xl p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 mr-2 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Quote Details
              </h3>

              <div class="space-y-4">
                <div class="py-2 border-b border-gray-200">
                  <div class="text-gray-600 font-medium mb-1">Title</div>
                  <div class="text-gray-900">
                    <%= @quote.title %>
                  </div>
                </div>

                <div class="py-2 border-b border-gray-200">
                  <div class="text-gray-600 font-medium mb-1">Author</div>
                  <div class="text-gray-900">
                    <%= @quote.author %>
                  </div>
                </div>

                <div class="py-2">
                  <div class="text-gray-600 font-medium mb-1">Added</div>
                  <div class="text-gray-900">
                    <%= @quote.created_at.strftime("%B %d, %Y") %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Statistics -->
            <% if @quote.respond_to?(:movement_quotes) && @quote.movement_quotes.any? %>
              <div class="bg-emerald-50 rounded-xl p-6 border border-emerald-100">
                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                  <svg class="w-5 h-5 mr-2 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                  Usage Statistics
                </h3>

                <div class="space-y-3">
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">References</span>
                    <span class="text-2xl font-bold text-emerald-600"><%= @quote.movement_quotes.count %></span>
                  </div>

                  <% unique_works = @quote.movement_quotes.joins(:movement).includes(movement: :work).map { |mc| mc.movement.work }.uniq %>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">Works Referenced</span>
                    <span class="text-lg font-semibold text-gray-900"><%= unique_works.count %></span>
                  </div>

                  <% categories = @quote.movement_quotes.where.not(category: [nil, '']).pluck(:category).uniq %>
                  <% if categories.any? %>
                    <div class="pt-2">
                      <span class="text-gray-600 text-sm">Categories</span>
                      <div class="flex flex-wrap gap-1 mt-1">
                        <% categories.each do |category| %>
                          <span class="px-2 py-1 bg-emerald-100 text-emerald-800 text-xs rounded-full">
                            <%= category %>
                          </span>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
