<% content_for :title, "#{@quote.title} - Hapax" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Navigation -->
    <div class="mb-8">
      <button onclick="if (history.length > 1) { history.back(); } else { window.location.href = '<%= root_path %>'; }"
              class="inline-flex items-center text-indigo-600 hover:text-indigo-700 cursor-pointer font-medium transition-colors bg-transparent border-0 p-0">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back
      </button>
    </div>

    <!-- Main Content -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <!-- Header -->
      <div class="px-8 py-8 border-b border-gray-100">
        <div class="flex justify-between items-start mb-6">
          <div class="flex-1">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">
              <%= @quote.title %>
            </h1>
            <p class="text-lg text-gray-600">
              by <%= @quote.author %>
            </p>
          </div>

          <!-- Action Buttons -->
          <div class="flex gap-2 ml-6">
            <%= link_to edit_quote_path(@quote),
                class: "p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors",
                title: "Edit Quote" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            <% end %>

            <%= button_to @quote, method: :delete,
                data: { confirm: "Are you sure you want to delete this quote?" },
                class: "p-2 text-red-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors",
                title: "Delete Quote" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            <% end %>
          </div>
        </div>

        <!-- Metadata -->
        <div class="flex flex-wrap gap-6 text-sm">
          <div class="flex items-center">
            <span class="text-gray-500 mr-2">Added:</span>
            <span class="font-medium text-gray-900"><%= @quote.created_at.strftime("%B %d, %Y") %></span>
          </div>

          <% if @quote.quote_details.any? %>
            <div class="flex items-center">
              <span class="text-gray-500 mr-2">References:</span>
              <span class="font-medium text-gray-900"><%= @quote.quote_details.count %></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Notes -->
      <% if @quote.notes.present? %>
        <div class="px-8 py-6 border-b border-gray-100">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Notes</h2>
          <div class="text-gray-700 leading-relaxed whitespace-pre-line">
            <%= @quote.notes %>
          </div>
        </div>
      <% end %>

      <!-- Images -->
      <% if @quote.images.attached? %>
        <div class="px-8 py-6 border-b border-gray-100">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">
            Images
            <span class="text-sm font-normal text-gray-500 ml-2">(<%= @quote.images.count %>)</span>
          </h2>
          <div class="flex flex-wrap gap-4">
            <% @quote.images.each do |image| %>
              <div class="h-64 overflow-hidden">
                <%= image_tag image, class: "h-full w-auto object-cover" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Referenced in Works -->
      <% if @quote.quote_details.any? %>
        <div class="px-8 py-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">
            Referenced in Works
            <span class="text-sm font-normal text-gray-500 ml-2">(<%= @quote.quote_details.count %>)</span>
          </h2>

          <div class="space-y-2">
            <% @quote.quote_details.includes(detailable: { work: :composer }).each do |quote_detail| %>
              <% if quote_detail.detailable_type == "Movement" %>
                <%= link_to [quote_detail.detailable.work.composer, quote_detail.detailable.work, quote_detail.detailable], class: "block p-4 rounded-lg border border-gray-100 hover:border-gray-200 hover:bg-gray-50 transition-all group" do %>
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <h3 class="font-medium text-gray-900 group-hover:text-indigo-600 transition-colors mb-1">
                        <%= quote_detail.detailable.work.title %> - <%= quote_detail.detailable.title %>
                      </h3>
                      <p class="text-sm text-gray-600 mb-2">
                        by <%= quote_detail.detailable.work.composer.full_name %>
                      </p>

                      <div class="space-y-1 text-sm">
                        <% if quote_detail.location.present? %>
                          <div class="text-gray-600">
                            <span class="font-medium">Location:</span> <%= quote_detail.location %>
                          </div>
                        <% end %>

                        <% if quote_detail.excerpt_text.present? %>
                          <div class="text-gray-600">
                            <span class="font-medium">Excerpt:</span> "<%= quote_detail.excerpt_text %>"
                          </div>
                        <% end %>
                      </div>
                    </div>

                    <% if quote_detail.category.present? %>
                      <span class="ml-4 px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full flex-shrink-0">
                        <%= quote_detail.category %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
              <% elsif quote_detail.detailable_type == "Work" %>
                <%= link_to [quote_detail.detailable.composer, quote_detail.detailable], class: "block p-4 rounded-lg border border-gray-100 hover:border-gray-200 hover:bg-gray-50 transition-all group" do %>
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <h3 class="font-medium text-gray-900 group-hover:text-indigo-600 transition-colors mb-1">
                        <%= quote_detail.detailable.title %>
                      </h3>
                      <p class="text-sm text-gray-600 mb-2">
                        by <%= quote_detail.detailable.composer.full_name %>
                      </p>

                      <div class="space-y-1 text-sm">
                        <% if quote_detail.location.present? %>
                          <div class="text-gray-600">
                            <span class="font-medium">Location:</span> <%= quote_detail.location %>
                          </div>
                        <% end %>

                        <% if quote_detail.excerpt_text.present? %>
                          <div class="text-gray-600">
                            <span class="font-medium">Excerpt:</span> "<%= quote_detail.excerpt_text %>"
                          </div>
                        <% end %>
                      </div>
                    </div>

                    <% if quote_detail.category.present? %>
                      <span class="ml-4 px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full flex-shrink-0">
                        <%= quote_detail.category %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
