<div id="<%= dom_id quote %>" class="bg-white rounded-lg shadow-sm hover:shadow-md transition-all duration-200 border border-gray-200">
  <div class="p-6">
    <div class="flex items-start justify-between">
      <!-- Left side - Quote content -->
      <div class="flex-1 mr-6">
        <div class="flex items-center gap-4 mb-3">
          <h3 class="text-lg font-semibold text-gray-900 hover:text-emerald-600 transition-colors">
            <%= link_to quote.title, quote %>
          </h3>

          <!-- Author Badge -->
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-700">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
            </svg>
            <%= quote.author %>
          </span>
        </div>

        <!-- Notes Preview -->
        <% if quote.notes.present? %>
          <p class="text-gray-600 text-sm leading-relaxed line-clamp-2 mb-3">
            <%= quote.notes %>
          </p>
        <% end %>

        <!-- References count if available -->
        <% if quote.respond_to?(:movement_quotes) && quote.movement_quotes.any? %>
          <div class="flex items-center text-xs text-gray-500">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
            </svg>
            <%= pluralize(quote.movement_quotes.count, 'reference') %>
          </div>
        <% end %>
      </div>

      <!-- Right side - Action button -->
      <div class="flex-shrink-0">
        <%= link_to quote, class: "inline-flex items-center px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white text-sm font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 616 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          View
        <% end %>
      </div>
    </div>
  </div>
</div>
