<% content_for :title, "New Quote" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Navigation -->
    <div class="mb-8">
        All Quotes
    </div>

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        Add New Quote
      </h1>
      <p class="text-lg text-gray-600">
        Create a new scholarly reference to add to your collection
      </p>
    </div>

    <!-- Form -->
    <%= render "form", quote: @quote %>
  </div>
</div>
