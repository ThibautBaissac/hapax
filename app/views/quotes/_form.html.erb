<%= form_with(model: quote, local: true, class: "space-y-6") do |form| %>
  <!-- Error Messages -->
  <% if quote.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex items-center mb-2">
        <svg class="w-4 h-4 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
        </svg>
        <h3 class="text-red-800 font-medium">
          <%= pluralize(quote.errors.count, "error") %> prohibited this quote from being saved:
        </h3>
      </div>
      <ul class="list-disc list-inside space-y-1 text-sm text-red-700">
        <% quote.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Main Form -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <div class="space-y-6">
      <!-- Title -->
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors",
            placeholder: "The title of the book, article, or paper" %>
      </div>

      <!-- Author -->
      <div>
        <%= form.label :author, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :author,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors",
            placeholder: "Author name" %>
      </div>

      <!-- Notes -->
      <div>
        <%= form.label :notes, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :notes,
            rows: 6,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors resize-y",
            placeholder: "Add notes about this quote, key excerpts, or relevant content..." %>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex gap-3">
    <%= form.submit class: "px-4 py-2 bg-emerald-600 text-white text-sm font-medium rounded-lg hover:bg-emerald-700 transition-colors" %>
    <% if quote.persisted? %>
      <%= link_to "Cancel", quote_path(quote),
          class: "px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition-colors" %>
    <% end %>
  </div>
<% end %>
