<%= form_with model: quote, local: true, multipart: true, class: "space-y-6", data: { controller: "image-preview" } do |form| %>
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="p-8">
      <!-- Error Messages -->
      <% if quote.errors.any? %>
        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
          <h3 class="text-sm font-medium text-red-800 mb-2">
            <%= pluralize(quote.errors.count, "error") %> prohibited this quote from being saved:
          </h3>
          <ul class="text-sm text-red-700 space-y-1">
            <% quote.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Title Field -->
      <div class="mb-6">
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors", placeholder: "Enter quote title..." %>
      </div>

      <!-- Author Field -->
      <div class="mb-6">
        <%= form.label :author, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :author, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors", placeholder: "Enter author name..." %>
      </div>

      <!-- Notes Field -->
      <div class="mb-6">
        <%= form.label :notes, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :notes, rows: 6, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors resize-vertical", placeholder: "Enter your notes about this quote..." %>
      </div>

      <!-- Current Images -->
      <% if quote.persisted? && quote.images.attached? %>
        <div class="mb-6">
          <h3 class="block text-sm font-medium text-gray-700 mb-3">Current Images</h3>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <% quote.images.each_with_index do |image, index| %>
              <div class="relative group">
                <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden">
                  <%= image_tag image, class: "w-full h-full object-cover" %>
                </div>
                <button type="button"
                        data-action="click->image-preview#removeImage"
                        data-image-preview-index-param="<%= index %>"
                        class="absolute top-2 right-2 bg-red-600 text-white rounded-full p-1 opacity-0 group-hover:opacity-100 transition-opacity hover:bg-red-700">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
                <%= form.hidden_field :images_to_keep, value: image.signed_id, id: "keep_image_#{index}", name: "quote[images_to_keep][]", data: { "image-preview-target": "keepField" } %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Image Upload -->
      <div class="mb-6">
        <%= form.label :images, "Add Images", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-gray-400 transition-colors">
          <div class="text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
              <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <div class="mt-4">
              <%= form.file_field :images, multiple: true, accept: "image/*",
                  class: "sr-only",
                  id: "image-upload",
                  data: {
                    "image-preview-target": "input",
                    "action": "change->image-preview#previewImages"
                  } %>
              <label for="image-upload" class="cursor-pointer">
                <span class="mt-2 block text-sm font-medium text-gray-900">
                  Upload images
                </span>
                <span class="mt-1 block text-sm text-gray-600">
                  Select multiple files (PNG, JPG, GIF up to 10MB each)
                </span>
              </label>
            </div>
          </div>
        </div>

        <!-- Image Preview Container -->
        <div data-image-preview-target="preview" class="mt-4 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 hidden"></div>
      </div>
    </div>

    <!-- Form Actions -->
    <div class="px-8 py-4 bg-gray-50 border-t border-gray-200 flex justify-between items-center">
      <div class="flex gap-3">
        <%= form.submit quote.persisted? ? "Update Quote" : "Create Quote",
            class: "bg-indigo-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors" %>

        <% cancel_path = quote.persisted? ? quote_path(quote) : quotes_path %>
        <%= link_to "Cancel", cancel_path,
            class: "bg-gray-100 text-gray-700 px-6 py-2 rounded-lg font-medium hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors" %>
      </div>

      <% if quote.persisted? %>
        <%= button_to "Delete", quote_path(quote), method: :delete,
            data: { confirm: "Are you sure you want to delete this quote?" },
            class: "text-red-600 hover:text-red-700 font-medium transition-colors" %>
      <% end %>
    </div>
  </div>
<% end %>
