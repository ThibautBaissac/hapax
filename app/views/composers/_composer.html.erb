<div id="<%= dom_id composer %>" class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group">
  <!-- Header with gradient background -->
  <div class="bg-indigo-500 p-6 text-white">
    <div class="flex items-start space-x-4">
      <!-- Portrait Preview -->
      <% if composer.portrait.attached? %>
        <div class="flex-shrink-0">
          <div class="w-16 h-16 overflow-hidden">
            <%= image_tag composer.portrait,
                alt: "Portrait of #{composer.full_name}",
                class: "w-full h-full object-cover" %>
          </div>
        </div>
      <% end %>

      <div class="flex-1">
        <h3 class="text-xl font-bold mb-1">
          <%= composer.first_name %> <%= composer.last_name %>
        </h3>
        <div class="flex items-center space-x-1 text-indigo-100">
          <span class="flex items-center">
            <%= composer.birth_date&.year || "Unknown" %>
          </span>
          <span>-</span>
          <span class="flex items-center">
            <%= composer.death_date&.year || "Present" %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Content Section -->
  <div class="p-6">
    <!-- Works count -->
    <% if composer.works.any? %>
      <div class="mb-4">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-amber-100 text-amber-800">
          <%= pluralize(composer.works.count, 'work') %>
        </span>
      </div>
    <% end %>

    <!-- Short Bio -->
    <% if composer.short_bio.present? %>
      <div class="mb-4">
        <p class="text-gray-600 text-sm leading-relaxed line-clamp-3">
          <%= composer.short_bio %>
        </p>
      </div>
    <% end %>

    <!-- Life Span Details -->
    <div class="grid grid-cols-2 gap-4 mb-6 text-sm">
      <div class="bg-gray-50 rounded-lg p-3">
        <div class="text-gray-500 font-medium mb-1">Born</div>
        <div class="text-gray-900">
          <%= composer.birth_date&.strftime("%B %d, %Y") || "Unknown" %>
        </div>
      </div>
      <div class="bg-gray-50 rounded-lg p-3">
        <div class="text-gray-500 font-medium mb-1">Died</div>
        <div class="text-gray-900">
          <%= composer.death_date&.strftime("%B %d, %Y") || "Still alive" %>
        </div>
      </div>
    </div>

    <!-- Action Button -->
    <div class="flex justify-between items-center pt-4 border-t border-gray-100">
      <%= link_to composer, class: "inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold rounded-lg shadow hover:shadow-md transform hover:-translate-y-0.5 transition-all duration-200" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>
        View Details
      <% end %>
    </div>
  </div>
</div>
