<% content_for :title, "#{@movement.title} - Hapax" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Navigation -->
    <div class="mb-8">
      <%= link_to composer_work_path(@movement.work.composer, @movement.work), class: "inline-flex items-center text-indigo-600 hover:text-indigo-700 font-medium transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <%= @movement.work.title %>
      <% end %>
    </div>

    <!-- Main Content -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <!-- Header -->
      <div class="px-8 py-8 border-b border-gray-100">
        <div class="flex justify-between items-start mb-6">
          <div class="flex-1">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">
              <%= @movement.title %>
            </h1>
            <p class="text-lg text-gray-600">
              from <%= @movement.work.title %>
            </p>
          </div>

          <!-- Action Buttons -->
          <div class="flex gap-2 ml-6">
            <%= link_to edit_composer_work_movement_path(@movement.work.composer, @movement.work, @movement),
                class: "p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors",
                title: "Edit Movement" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            <% end %>

            <%= button_to [@movement.work.composer, @movement.work, @movement], method: :delete,
                data: { confirm: "Are you sure you want to delete this movement?" },
                class: "p-2 text-red-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors",
                title: "Delete Movement" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            <% end %>
          </div>
        </div>

        <!-- Metadata -->
        <div class="flex flex-wrap gap-6 text-sm">
          <% if @movement.position.present? %>
            <div class="flex items-center">
              <span class="text-gray-500 mr-2">Position:</span>
              <span class="font-medium text-gray-900">Movement <%= @movement.position %></span>
            </div>
          <% end %>

          <% if @movement.duration.present? %>
            <div class="flex items-center">
              <span class="text-gray-500 mr-2">Duration:</span>
              <span class="font-medium text-gray-900"><%= time_duration(@movement.duration) %></span>
            </div>
          <% end %>

          <% if @movement.respond_to?(:movement_quotes) && @movement.movement_quotes.any? %>
            <div class="flex items-center">
              <span class="text-gray-500 mr-2">Quotes:</span>
              <span class="font-medium text-gray-900"><%= @movement.movement_quotes.count %></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Description -->
      <% if @movement.description.present? %>
        <div class="px-8 py-6 border-b border-gray-100">
          <p class="text-gray-700 leading-relaxed whitespace-pre-line">
            <%= @movement.description %>
          </p>
        </div>
      <% end %>

      <!-- Quotes -->
      <% if @movement.respond_to?(:movement_quotes) && @movement.movement_quotes.any? %>
        <div class="px-8 py-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">
            Quotes
            <span class="text-sm font-normal text-gray-500 ml-2">(<%= @movement.movement_quotes.count %>)</span>
          </h2>

          <div class="space-y-4">
            <% @movement.movement_quotes.includes(:quote).each do |movement_quote| %>
              <%= link_to movement_quote.quote, class: "block p-4 rounded-lg border border-gray-100 hover:border-gray-200 hover:bg-gray-50 transition-all group" do %>
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="font-medium text-gray-900 group-hover:text-indigo-600 transition-colors mb-1">
                      <%= movement_quote.quote.title %>
                    </h3>
                    <p class="text-sm text-gray-600 mb-2">
                      by <%= movement_quote.quote.author %>
                    </p>

                    <div class="space-y-1 text-sm">
                      <% if movement_quote.location_in_score.present? %>
                        <div class="text-gray-600">
                          <span class="font-medium">Location:</span> <%= movement_quote.location_in_score %>
                        </div>
                      <% end %>

                      <% if movement_quote.excerpt_text.present? %>
                        <div class="text-gray-600">
                          <span class="font-medium">Excerpt:</span> "<%= movement_quote.excerpt_text %>"
                        </div>
                      <% end %>
                    </div>
                  </div>

                  <% if movement_quote.category.present? %>
                    <span class="ml-4 px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full flex-shrink-0">
                      <%= movement_quote.category %>
                    </span>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Other Movements -->
      <% if @movement.work.present? && @movement.work.movements.count > 1 %>
        <div class="px-8 py-6 border-t border-gray-100 bg-gray-50">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">
            Other Movements
            <span class="text-sm font-normal text-gray-500 ml-2">(<%= @movement.work.movements.count - 1 %>)</span>
          </h2>

          <div class="space-y-2">
            <% @movement.work.movements.order(:position).each do |movement| %>
              <% next if movement == @movement %>
              <%= link_to [@movement.work.composer, @movement.work, movement], class: "block p-3 rounded-lg border border-gray-100 hover:border-gray-200 hover:bg-white transition-all group" do %>
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3">
                    <span class="text-sm font-medium text-gray-400"><%= movement.position %>.</span>
                    <span class="font-medium text-gray-900 group-hover:text-indigo-600 transition-colors">
                      <%= movement.title %>
                    </span>
                  </div>
                  <% if movement.duration.present? %>
                    <span class="text-sm text-gray-500">
                      <%= time_duration(movement.duration) %>
                    </span>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
