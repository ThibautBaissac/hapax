<% content_for :title, "Movements" %>

<div class="min-h-screen bg-slate-50">
  <div class="container mx-auto px-4 py-8">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        <span class="text-rose-500">
          Movements in <%= @work.title %>
        </span>
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        by <%= @composer.full_name %>
      </p>

      <!-- Add New Movement Button -->
      <div class="mt-8">
        <%= link_to "Add New Movement", new_composer_work_movement_path(@composer, @work),
            class: "inline-flex items-center px-6 py-3 bg-rose-600 hover:bg-rose-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" %>
        <%= link_to "Back to Work", composer_work_path(@composer, @work),
            class: "inline-flex items-center px-6 py-3 ml-4 bg-gray-600 hover:bg-gray-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" %>
      </div>
    </div>

    <!-- Pagination Info -->
    <% if @pagy.count > 0 %>
      <div class="text-center mb-6">
        <p class="text-gray-600">
          Showing <%= @pagy.from %>-<%= @pagy.to %> of <%= @pagy.count %> movements
        </p>
      </div>
    <% end %>

    <!-- Movements Grid -->
    <div id="movements" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @movements.each do |movement| %>
        <%= render movement %>
      <% end %>
    </div>

    <!-- Pagination Controls -->
    <% if @pagy.pages > 1 %>
      <div class="mt-12 flex justify-center">
        <nav class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
          <%== pagy_nav(@pagy) %>
        </nav>
      </div>
    <% end %>

    <!-- Empty State -->
    <% if @movements.empty? %>
      <div class="text-center py-16">
        <div class="w-24 h-24 mx-auto mb-6 bg-gray-100 rounded-full flex items-center justify-center">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No movements yet</h3>
        <p class="text-gray-600 mb-6">Start adding movements to this work</p>
        <%= link_to "Add First Movement", new_composer_work_movement_path(@composer, @work),
            class: "inline-flex items-center px-6 py-3 bg-rose-600 hover:bg-rose-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" %>
      </div>
    <% end %>
  </div>
</div>
