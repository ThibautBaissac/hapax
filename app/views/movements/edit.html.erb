<% content_for :title, "Editing #{@movement.title} - Hapax" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Navigation -->
    <div class="mb-8">
      <%= link_to [@movement.work.composer, @movement.work, @movement], class: "inline-flex items-center text-indigo-600 hover:text-indigo-700 font-medium transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <%= @movement.title %>
      <% end %>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        Edit Movement
      </h1>
      <p class="text-lg text-gray-600">
        Update information for <%= @movement.title %>
      </p>
    </div>

    <!-- Form -->
    <%= render "form", movement: @movement %>
  </div>
</div>
