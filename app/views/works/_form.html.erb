<%= form_with(model: work, local: true, class: "space-y-6") do |form| %>
  <!-- Error Messages -->
  <% if work.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-6">
      <div class="flex items-center mb-3">
        <svg class="w-5 h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
        </svg>
        <h3 class="text-red-800 font-semibold">
          <%= pluralize(work.errors.count, "error") %> prohibited this work from being saved:
        </h3>
      </div>
      <ul class="list-disc list-inside space-y-1 text-red-700">
        <% work.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Basic Information Section -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-2.686 2-6 2s-6-.895-6-2 2.686-2 6-2 6 .895 6 2zm12-3c0 1.105-2.686 2-6 2s-6-.895-6-2 2.686-2 6-2 6 .895 6 2zm-12 3V6l12-3v13"></path>
      </svg>
      Basic Information
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Title -->
      <div class="md:col-span-2">
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors duration-200",
            placeholder: "Symphony No. 5 in C minor" %>
      </div>

      <!-- Opus -->
      <div>
        <%= form.label :opus, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :opus,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors duration-200",
            placeholder: "Op. 67" %>
      </div>

      <!-- Duration -->
      <div>
        <%= form.label :duration, "Duration (in seconds)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :duration,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors duration-200",
            placeholder: "1800",
            min: 0 %>
        <p class="text-xs text-gray-500 mt-1">Duration in seconds (e.g., 1800 = 30 minutes)</p>
      </div>
    </div>
  </div>

  <!-- Composer Section -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
      </svg>
      Composer
    </h2>

    <div>
      <%= form.label :composer_id, "Select Composer", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.collection_select :composer_id,
          Composer.all.order(:last_name, :first_name),
          :id,
          :full_name,
          { prompt: "Choose a composer...", selected: work.composer_id },
          { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors duration-200" } %>
    </div>
  </div>

  <!-- Description Section -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      Description
    </h2>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :description,
          rows: 6,
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors duration-200 resize-y",
          placeholder: "Describe the work, its historical context, musical characteristics, and significance..." %>
      <p class="text-xs text-gray-500 mt-1">Provide details about the composition, style, and importance</p>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex flex-col sm:flex-row gap-4 pt-6">
    <%= form.submit class: "flex-1 sm:flex-none inline-flex items-center justify-center px-8 py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" %>

    <% if work.persisted? %>
      <%= link_to "Cancel", work_path(work),
          class: "flex-1 sm:flex-none inline-flex items-center justify-center px-8 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg transition-colors duration-200" %>
    <% else %>
      <%= link_to "Cancel", works_path,
          class: "flex-1 sm:flex-none inline-flex items-center justify-center px-8 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg transition-colors duration-200" %>
    <% end %>
  </div>
<% end %>
