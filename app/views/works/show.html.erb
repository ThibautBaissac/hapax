<% content_for :title, @work.title %>

<div class="min-h-screen bg-slate-50">
  <div class="container mx-auto px-4 py-8">
    <!-- Top Navigation Bar -->
    <div class="mb-6 flex justify-between items-center">
      <%= link_to composer_works_path(@work.composer), class: "inline-flex items-center text-purple-500 hover:text-purple-700 font-medium transition-colors duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Works
      <% end %>

      <!-- Action Buttons -->
      <div class="flex gap-2">
        <%= link_to edit_composer_work_path(@work.composer, @work),
            class: "inline-flex items-center justify-center w-10 h-10 bg-white text-purple-600 rounded-lg shadow-md hover:shadow-lg hover:bg-gray-50 transform hover:-translate-y-0.5 transition-all duration-200",
            title: "Edit Work" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        <% end %>

        <%= button_to [@work.composer, @work], method: :delete,
            data: { confirm: "Are you sure you want to delete this work? This action cannot be undone." },
            class: "inline-flex items-center justify-center w-10 h-10 bg-red-600 hover:bg-red-700 text-white rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200",
            title: "Delete Work" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        <% end %>
      </div>
    </div>

    <!-- Main Content Card -->
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <!-- Header Section -->
      <div class="bg-purple-500 px-8 py-12 text-white">
        <div class="flex-1">
          <h1 class="text-4xl lg:text-5xl font-bold mb-4">
            <%= @work.title %>
          </h1>

          <!-- Work Details -->
          <div class="flex flex-wrap items-center gap-6 text-purple-100 text-lg mb-4">
            <% if @work.opus.present? %>
              <span class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
                </svg>
                <%= @work.opus %>
              </span>
            <% end %>
            <% if @work.duration.present? %>
              <span class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                </svg>
                <%= time_duration(@work.duration) %>
              </span>
            <% end %>
          </div>

          <!-- Composer Badge -->
          <% if @work.composer.present? %>
            <div class="mt-6">
              <%= link_to @work.composer, class: "inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-amber-100 text-amber-800 hover:bg-amber-200 transition-colors duration-200" do %>
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
                <%= @work.composer.first_name %> <%= @work.composer.last_name %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Content Section -->
      <div class="p-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Left Column - Description -->
          <div class="lg:col-span-2 space-y-8">
            <!-- Description -->
            <% if @work.description.present? %>
              <div>
                <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
                  <svg class="w-6 h-6 mr-3 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  About This Work
                </h2>
                <div class="bg-purple-50 rounded-xl p-6 border-l-4 border-purple-500">
                  <p class="text-gray-700 text-lg leading-relaxed whitespace-pre-line">
                    <%= @work.description %>
                  </p>
                </div>
              </div>
            <% end %>

            <!-- Movements Section -->
            <% if @work.respond_to?(:movements) && @work.movements.any? %>
              <div>
                <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                  <svg class="w-6 h-6 mr-3 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                  </svg>
                  Movements
                  <span class="ml-2 text-sm font-normal text-gray-500">(<%= @work.movements.count %>)</span>
                </h2>
                <div class="space-y-3">
                  <% @work.movements.order(:position).each do |movement| %>
                    <%= link_to([@composer, @work, movement]) do %>
                      <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-200">
                        <div class="flex justify-between items-start">
                          <div class="flex-1">
                            <h3 class="font-semibold text-gray-900"><%= movement.title %></h3>
                            <% if movement.description.present? %>
                              <p class="text-sm text-gray-600 mt-1 line-clamp-2"><%= movement.description %></p>
                            <% end %>
                          </div>
                          <% if movement.duration.present? %>
                            <span class="ml-4 px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full whitespace-nowrap">
                              <%= time_duration(movement.duration) %>
                            </span>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>

                <!-- View All Movements Button -->
                <div class="mt-4">
                  <%= link_to composer_work_movements_path(@composer, @work),
                      class: "inline-flex items-center px-4 py-2 bg-purple-600 text-white text-sm font-medium rounded-lg hover:bg-purple-700 transition-colors duration-200" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    View All Movements
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Right Column - Details -->
          <div class="space-y-6">
            <!-- Work Details -->
            <div class="bg-gray-50 rounded-xl p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Work Details
              </h3>

              <div class="space-y-4">
                <% if @work.opus.present? %>
                  <div class="flex justify-between items-center py-2 border-b border-gray-200">
                    <span class="text-gray-600 font-medium">Opus</span>
                    <span class="text-gray-900"><%= @work.opus %></span>
                  </div>
                <% end %>

                <% if @work.duration.present? %>
                  <div class="flex justify-between items-center py-2 border-b border-gray-200">
                    <span class="text-gray-600 font-medium">Duration</span>
                    <span class="text-gray-900"><%= time_duration(@work.duration) %></span>
                  </div>
                <% end %>

                <% if @work.composer.present? %>
                  <div class="flex justify-between items-center py-2">
                    <span class="text-gray-600 font-medium">Composer</span>
                    <span class="text-gray-900">
                      <%= link_to @work.composer, class: "text-purple-600 hover:text-purple-800" do %>
                        <%= @work.composer.first_name %> <%= @work.composer.last_name %>
                      <% end %>
                    </span>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Statistics (if movements are available) -->
            <% if @work.respond_to?(:movements) && @work.movements.any? %>
              <div class="bg-purple-50 rounded-xl p-6 border border-purple-100">
                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                  <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                  Structure
                </h3>

                <div class="space-y-3">
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">Total Movements</span>
                    <span class="text-2xl font-bold text-purple-600"><%= @work.movements.count %></span>
                  </div>

                  <% total_movement_duration = @work.movements.where.not(duration: nil).sum(:duration) %>
                  <% if total_movement_duration > 0 %>
                    <div class="flex justify-between items-center">
                      <span class="text-gray-600">Total Duration</span>
                      <span class="text-lg font-semibold text-gray-900">
                        <%= time_duration(total_movement_duration) %>
                      </span>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
