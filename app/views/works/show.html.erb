<% content_for :title, @work.title %>

<div class="min-h-screen bg-slate-50">
  <div class="container mx-auto px-4 py-8">
    <!-- Top Navigation Bar -->
    <div class="mb-6 flex justify-between items-center">
      <%= link_to composer_path(@composer), class: "inline-flex items-center text-indigo-500 hover:text-indigo-700 font-medium transition-colors duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to <%= @composer.full_name %>
      <% end %>

      <!-- Action Buttons -->
      <div class="flex gap-2">
        <%= link_to edit_composer_work_path(@composer, @work),
            class: "inline-flex items-center justify-center w-10 h-10 bg-white text-indigo-600 rounded-lg shadow-md hover:shadow-lg hover:bg-gray-50 transform hover:-translate-y-0.5 transition-all duration-200",
            title: "Edit Work" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        <% end %>

        <%= button_to [@composer, @work], method: :delete,
            data: { confirm: "Are you sure you want to delete this work? This action cannot be undone." },
            class: "inline-flex items-center justify-center w-10 h-10 bg-red-600 hover:bg-red-700 text-white rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200",
            title: "Delete Work" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        <% end %>
      </div>
    </div>

    <!-- Main Content Card -->
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <!-- Header Section -->
      <div class="bg-indigo-900 px-8 py-12 text-white">
        <div class="flex-1 space-y-6">
          <!-- Title and Composer Layout -->
          <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between lg:gap-8">
            <div class="flex-1">
              <h1 class="text-4xl lg:text-5xl font-bold">
                <%= @work.title %>
              </h1>
            </div>

            <!-- Composer Badge - positioned to the right on large screens -->
            <% if @composer.present? %>
              <div class="mt-4 lg:mt-0 lg:flex-shrink-0">
                <%= link_to @composer, class: "inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-amber-100 text-amber-800 hover:bg-amber-200 transition-colors duration-200" do %>
                  <%= @composer.first_name %> <%= @composer.last_name %>
                <% end %>
              </div>
            <% end %>
          </div>

          <% if @work.instrumentation.present? %>
            <div class="text-xl lg:text-2xl font-light text-indigo-100">
              <%= @work.instrumentation %>
            </div>
          <% end %>

          <!-- Metadata row: Form, Opus, Duration -->
          <div class="flex flex-wrap items-center gap-6 text-indigo-100">
            <% if @work.form.present? %>
              <span class="text-lg font-medium">
                <%= t("activerecord.values.work.form.#{@work.form}") %>
              </span>
            <% end %>

            <% if @work.opus.present? %>
              <span class="text-lg">
                <%= @work.opus %>
              </span>
            <% end %>

            <% if @work.duration.present? %>
              <span class="text-lg">
                <%= "circa" unless @work.recorded.present? %>
                <%= time_duration(@work.duration) %>
              </span>
            <% end %>
          </div>

          <!-- Composition Dates -->
          <% if @work.start_date_composed.present? || @work.end_date_composed.present? || @work.unsure_start_date.present? || @work.unsure_end_date.present? %>
            <div class="text-lg text-indigo-100">
              <% if @work.start_date_composed.present? && @work.end_date_composed.present? %>
                <% start_display = @work.unsure_start_date? ? "[#{@work.start_date_composed.strftime("%B %Y")}]" : @work.start_date_composed.strftime("%B %Y") %>
                <% end_display = @work.unsure_end_date? ? "[#{@work.end_date_composed.strftime("%B %Y")}]" : @work.end_date_composed.strftime("%B %Y") %>
                <%= start_display %> - <%= end_display %>
              <% elsif @work.start_date_composed.present? %>
                <% start_display = @work.unsure_start_date? ? "[#{@work.start_date_composed.strftime("%B %Y")}]" : @work.start_date_composed.strftime("%B %Y") %>
                From <%= start_display %>
              <% elsif @work.end_date_composed.present? %>
                <% end_display = @work.unsure_end_date? ? "[#{@work.end_date_composed.strftime("%B %Y")}]" : @work.end_date_composed.strftime("%B %Y") %>
                Until <%= end_display %>
              <% elsif @work.unsure_start_date.present? %>
                [<%= @work.unsure_start_date %>]
              <% elsif @work.unsure_end_date.present? %>
                [<%= @work.unsure_end_date %>]
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Content Section -->
      <div class="p-8">
        <div class="space-y-8">
          <!-- Description -->
          <% if @work.description.present? %>
            <div>
              <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
                About This Work
              </h2>
              <div class="bg-indigo-50 rounded-xl p-6 border-l-4 border-indigo-500">
                <p class="text-gray-700 text-lg leading-relaxed whitespace-pre-line">
                  <%= @work.description %>
                </p>
              </div>
            </div>
          <% end %>

          <!-- Movements Section -->
          <% if @work.respond_to?(:movements) && @work.movements.any? %>
            <div>
              <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                <%= t("activerecord.values.work.structure.#{@work.structure}") %>
                <span class="ml-2 text-sm font-normal text-gray-500">(<%= @work.movements.count %>)</span>
              </h2>
              <div class="space-y-3">
                <% @work.movements.order(:position).each do |movement| %>
                    <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-200">
                    <%= link_to([@composer, @work, movement]) do %>
                      <div class="flex justify-between items-start">
                        <div class="flex-1">
                          <h3 class="font-semibold text-gray-900"><%= movement.title %></h3>
                          <% if movement.description.present? %>
                            <p class="text-sm text-gray-600 mt-1 line-clamp-2"><%= movement.description %></p>
                          <% end %>
                        </div>
                        <% if movement.movement_quotes.any? %>
                          <span class="ml-4 px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full whitespace-nowrap">
                            <%= movement.movement_quotes.count %> quotes
                          </span>
                        <% end %>
                      </div>
                    <% end %>
                </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
