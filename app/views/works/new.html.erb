<% content_for :title, "New Work - Hapax" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Navigation -->
    <div class="mb-8">
      <%= link_to composer_path(@composer), class: "inline-flex items-center text-indigo-600 hover:text-indigo-700 font-medium transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <%= @composer.full_name %>
      <% end %>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        Add New Work
      </h1>
      <p class="text-lg text-gray-600">
        Create a new musical work for <%= @composer.full_name %>
      </p>
    </div>

    <!-- Form -->
    <%= render "form", work: @work %>
  </div>
</div>
