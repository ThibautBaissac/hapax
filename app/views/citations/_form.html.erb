<%= form_with(model: citation, local: true, class: "space-y-6") do |form| %>
  <!-- Error Messages -->
  <% if citation.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-6">
      <div class="flex items-center mb-3">
        <svg class="w-5 h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
        </svg>
        <h3 class="text-red-800 font-semibold">
          <%= pluralize(citation.errors.count, "error") %> prohibited this citation from being saved:
        </h3>
      </div>
      <ul class="list-disc list-inside space-y-1 text-red-700">
        <% citation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Basic Information Section -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
      </svg>
      Citation Information
    </h2>

    <div class="space-y-6">
      <!-- Title -->
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors duration-200",
            placeholder: "The title of the book, article, or paper" %>
      </div>

      <!-- Author -->
      <div>
        <%= form.label :author, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :author,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors duration-200",
            placeholder: "Author name (Last, First or First Last)" %>
      </div>
    </div>
  </div>

  <!-- Notes Section -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      Notes & Content
    </h2>

    <div>
      <%= form.label :notes, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :notes,
          rows: 8,
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors duration-200 resize-y",
          placeholder: "Add notes about this citation, key quotes, or relevant excerpts..." %>
      <p class="text-xs text-gray-500 mt-1">Include relevant quotes, summaries, or notes about this source</p>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex flex-col sm:flex-row gap-4 pt-6">
    <%= form.submit class: "flex-1 sm:flex-none inline-flex items-center justify-center px-8 py-3 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" %>

    <% if citation.persisted? %>
      <%= link_to "Cancel", citation_path(citation),
          class: "flex-1 sm:flex-none inline-flex items-center justify-center px-8 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg transition-colors duration-200" %>
    <% else %>
      <%= link_to "Cancel", citations_path,
          class: "flex-1 sm:flex-none inline-flex items-center justify-center px-8 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg transition-colors duration-200" %>
    <% end %>
  </div>
<% end %>
